<Window x:Class="GraphProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphProj"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid Margin="10,10,10,10">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" Height="20">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
        <ColumnDefinition Width="auto"/>
      </Grid.ColumnDefinitions>
      <RadioButton Grid.Column="0" Content="2.1" Name="Checkbox2_1" Checked="Checkbox2_1_Checked" Width="50"/>
      <RadioButton Grid.Column="1" Content="2.2" Name="Checkbox2_2" Checked="Checkbox2_2_Checked" Width="50"/>
      <RadioButton Grid.Column="2" Content="2.3" x:Name="Checkbox2_3" Checked="Checkbox2_3_Checked" Width="50"/>
    </Grid>
    <Grid Grid.Row="1">
      <local:_2_1 x:Name="Task2_1" Visibility="Hidden"/>
      <local:_2_2 x:Name="Task2_2" Visibility="Hidden"/>
      <local:_2_3 x:Name="Task2_3" Visibility="Hidden"/>
    </Grid>
  </Grid>
</Window>
